    "dependencies": {
        "Microsoft.AspNet.Server.Kestrel": "1.0.0-beta8",
        "Microsoft.AspNet.Server.WebListener": "1.0.0-beta8",
        "Microsoft.AspNet.Diagnostics": "1.0.0-beta8"
